<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.mapper.main.UserMapper">


    <resultMap id="baseSelectMap" type="com.spring.model.User">
        <id column="id" property="userId" />
        <result column="name" property="name" />
        <result column="age" property="age" />
        <result column="pwd" property="pwd" />
        <result column="roleid" property="roleId" />
        <result column="account" property="account" />
        <result column="email" property="email" />
    </resultMap>

    <insert id="addUser"  parameterType="com.spring.model.User" >
        insert into  dim_user (name,age,pwd,roleid,account,email)
        values(#{name},#{age},#{pwd},#{roleId},#{account},#{email});
    </insert>

    <update id="updateUser" parameterType="com.spring.model.User" >
        update dim_user set  name=#{name}, age=#{age}, pwd=#{pwd},roleid=#{roleId},account=#{account},email=#{email}
        where id=#{userId}
    </update>

    <update id="updatePwd" >
        update dim_user set  pwd=#{0}
        where id=#{1}
    </update>

    <delete id="deleteUserByName" >
        delete from dim_user where id=#{userId}
    </delete>

    <select id="findUserByName" resultMap="baseSelectMap">
        select * from dim_user where name=#{name}
    </select>

    <select id="validate" resultMap="baseSelectMap" >--      管理用户登录
        select * from dim_user where name=#{name} and pwd=#{pwd}
    </select>

    <select id="findId" resultType="java.lang.String"  >--      查询id
        select id from dim_user where name=#{name} and pwd=#{pwd}
    </select>

</mapper>